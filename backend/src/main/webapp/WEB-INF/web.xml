<?xml version="1.0" encoding="utf-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee">
    <servlet>
        <servlet-name>KotlinBot</servlet-name>
        <servlet-class>com.alexfacciorusso.kotlinbot.KotlinBotServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>KotlinBotTest</servlet-name>
        <servlet-class>com.alexfacciorusso.kotlinbot.KotlinBotTestServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>KotlinBot</servlet-name>
        <url-pattern>/</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>KotlinBotTest</servlet-name>
        <url-pattern>/test</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>hello</welcome-file>
    </welcome-file-list>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>admin</web-resource-name>
            <url-pattern>/admin/*</url-pattern>
        </web-resource-collection>

        <auth-constraint>
            <!--suppress WebProperties -->
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>

</web-app>